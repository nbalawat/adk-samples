# Dockerfile specifically for Cloud Build
FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y git && rm -rf /var/lib/apt/lists/*

# Install uv
RUN pip install uv

# Copy only essential files first
COPY pyproject.toml README.md ./
COPY commercial_banking_onboarding/ ./commercial_banking_onboarding/
COPY main.py ./

# Install only essential dependencies without lockfile
RUN uv pip install --system google-adk python-dotenv pydantic uvicorn google-cloud-logging

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV GOOGLE_GENAI_USE_VERTEXAI=1

# Expose port
EXPOSE 8080

# Simple command that works
CMD ["python", "-c", "import subprocess; subprocess.run(['uv', 'run', 'adk', 'web', '--host', '0.0.0.0', '--port', '8080'])"]