# Minimal working Dockerfile for ADK deployment
FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y git && rm -rf /var/lib/apt/lists/*

# Install uv
RUN pip install uv

# Copy everything
COPY . .

# Install only essential dependencies directly
RUN uv pip install --system google-adk google-cloud-logging python-dotenv pydantic uvicorn

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV GOOGLE_GENAI_USE_VERTEXAI=1

# Expose port
EXPOSE 8080

# Use the command that works locally
CMD ["python", "-c", "import os; os.system('uv run adk web --host 0.0.0.0 --port 8080')"]