# Simplified Dockerfile for Commercial Banking Onboarding
FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install uv
RUN pip install uv

# Copy project files
COPY . .

# Install dependencies
RUN uv pip install --system google-adk python-dotenv pydantic

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV GOOGLE_GENAI_USE_VERTEXAI=1
ENV GOOGLE_CLOUD_PROJECT=agentic-experiments
ENV GOOGLE_CLOUD_LOCATION=us-central1
ENV SERVE_WEB_INTERFACE=true

# Expose port
EXPOSE 8080

# Run the application
CMD ["python", "-m", "uv", "run", "adk", "web", "--host", "0.0.0.0", "--port", "8080"]